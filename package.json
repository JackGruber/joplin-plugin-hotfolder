{
  "name": "joplin-plugin-hotfolder",
  "version": "0.4.0",
  "scripts": {
    "dist": "webpack --joplin-plugin-config buildMain && webpack --joplin-plugin-config buildExtraScripts && webpack --joplin-plugin-config createArchive",
    "prepare": "npm run test && npm run dist && husky install",
    "update": "npm install -g generator-joplin && yo joplin --update",
    "test": "jest"
  },
  "license": "MIT",
  "keywords": [
    "joplin-plugin"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.0.14",
    "chalk": "^4.1.0",
    "copy-webpack-plugin": "^6.1.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "on-build-webpack": "^0.1.0",
    "prettier": "2.3.0",
    "tar": "^6.0.5",
    "ts-jest": "^26.5.5",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "yargs": "^16.2.0"
  },
  "dependencies": {
    "chokidar": "^3.5.1",
    "file-type": "^16.2.0"
  },
  "browser": {
    "fs": false
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
